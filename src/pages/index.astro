---
// Portfolio Single Page
const portfolioData = {
  quote: {
    text: "La creatività è l'intelligenza che si diverte",
    author: "Albert Einstein"
  },
  about: {
    name: "Gerardo Romani",
    image: "./src/img/profilo.jpg",
    description: "Sono un creatore di contenuti appassionato di storytelling visivo. Attraverso i miei video racconto storie che emozionano e ispirano, combinando creatività e tecnica per creare esperienze uniche."
  },
  videos: [
    {
      id: 1,
      thumbnail: "/images/video1-thumb.jpg",
      instagramUrl: "https://www.instagram.com/reel/EXAMPLE1/",
      alt: "Video 1"
    },
    {
      id: 2,
      thumbnail: "/images/video2-thumb.jpg",
      instagramUrl: "https://www.instagram.com/reel/EXAMPLE2/",
      alt: "Video 2"
    },
    {
      id: 3,
      thumbnail: "/images/video3-thumb.jpg",
      instagramUrl: "https://www.instagram.com/reel/EXAMPLE3/",
      alt: "Video 3"
    },
    {
      id: 4,
      thumbnail: "/images/video4-thumb.jpg",
      instagramUrl: "https://www.instagram.com/reel/EXAMPLE4/",
      alt: "Video 4"
    }
  ],
  contact: {
    email: "tuoemail@example.com",
    instagram: "https://www.instagram.com/tuousername/",
    youtube: "https://www.youtube.com/@tuocanale"
  }
}
---

<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Portfolio | {portfolioData.about.name}</title>
  <meta name="description" content="Portfolio creativo di {portfolioData.about.name}">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Gabarito:wght@400;500;600;700;900&display=swap" rel="stylesheet">
</head>
<body>
  
  <!-- Hero Section - Citazione -->
  <section id="hero" class="hero-section">
    <!-- Hamburger Menu Button -->
    <button class="hamburger-btn" id="menuToggle" aria-label="Menu">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>

    <!-- Dropdown Navigation Menu -->
    <nav class="main-nav" id="mainNav">
      <a href="#hero" class="nav-link">Home</a>
      <a href="#about" class="nav-link">About</a>
      <a href="#gallery" class="nav-link">Lavori</a>
      <a href="#contact" class="nav-link">Contatti</a>
    </nav>

    <div class="quote-container">
      <blockquote class="quote">
        <p>"La creatività è l'<span class="highlight">intelligenza</span> che si diverte"</p>
        <footer>— {portfolioData.quote.author}</footer>
      </blockquote>
      <div class="scroll-indicator">
        <span>Scorri</span>
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M12 5v14M19 12l-7 7-7-7"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="about-section">
    <div class="container">
      <div class="about-content">
        <div class="profile-image">
          <img src={portfolioData.about.image} alt={portfolioData.about.name} />
        </div>
        <div class="about-text">
          <h2>{portfolioData.about.name}</h2>
          <p>{portfolioData.about.description}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Video Gallery Section -->
  <section id="gallery" class="gallery-section">
    <div class="container">
      <h2 class="section-title">I Miei Lavori</h2>
      <div class="video-grid">
        {portfolioData.videos.map((video, index) => (
          <a 
            href={video.instagramUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class={`video-card ${index % 2 === 0 ? 'align-right' : 'align-left'}`}
          >
            <div class="video-thumbnail">
              <img src={video.thumbnail} alt={video.alt} />
              <div class="play-overlay">
                <svg width="64" height="64" viewBox="0 0 24 24" fill="white">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="contact-section">
    <div class="container">
      <h2 class="section-title">Contatti</h2>
      <div class="contact-links">
        <a href={`mailto:${portfolioData.contact.email}`} class="contact-link">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
          <span>Email</span>
        </a>
        <a href={portfolioData.contact.instagram} target="_blank" rel="noopener noreferrer" class="contact-link">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
          </svg>
          <span>Instagram</span>
        </a>
        <a href={portfolioData.contact.youtube} target="_blank" rel="noopener noreferrer" class="contact-link">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"/>
            <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"/>
          </svg>
          <span>YouTube</span>
        </a>
      </div>
      <p class="copyright">© 2026 {portfolioData.about.name}. Tutti i diritti riservati.</p>
    </div>
  </section>

</body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --primary-color: #ffffff;
    --secondary-color: #a0b4b7;
    --accent-color: #315259;
    --accent-light: #3d656d;
    --text-color: #e0e7e9;
    --bg-color: #000000;
    --bg-pure-black: #000000;
    --detail-dark: #011F26;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Gabarito', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    color: var(--text-color);
    background-color: var(--bg-color);
    line-height: 1.6;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Hamburger Menu Button */
  .hamburger-btn {
    position: fixed;
    top: 2rem;
    left: 2rem;
    z-index: 1001;
    background: rgba(0, 0, 0, 0.8);
    border: 1px solid rgba(49, 82, 89, 0.4);
    border-radius: 12px;
    padding: 1rem;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 6px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(49, 82, 89, 0.3);
  }

  .hamburger-btn:hover {
    background: rgba(1, 31, 38, 0.9);
    border-color: var(--accent-color);
    box-shadow: 0 4px 30px rgba(49, 82, 89, 0.5);
  }

  .hamburger-line {
    width: 28px;
    height: 3px;
    background: var(--primary-color);
    border-radius: 3px;
    transition: all 0.3s ease;
    box-shadow: 0 0 10px rgba(49, 82, 89, 0.5);
  }

  .hamburger-btn:hover .hamburger-line {
    background: var(--accent-color);
    box-shadow: 0 0 15px rgba(49, 82, 89, 0.8);
  }

  /* Dropdown Navigation Menu */
  .main-nav {
    position: fixed;
    top: 5.5rem;
    left: 2rem;
    z-index: 1000;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    background: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(20px);
    padding: 1.5rem;
    border-radius: 16px;
    border: 1px solid rgba(49, 82, 89, 0.4);
    box-shadow: 0 8px 32px rgba(49, 82, 89, 0.3);
    min-width: 200px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-20px);
    transition: all 0.3s ease;
  }

  .main-nav.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .nav-link {
    color: var(--secondary-color);
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    position: relative;
    display: block;
  }

  .nav-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 0;
    background: var(--accent-color);
    border-radius: 3px;
    transition: height 0.3s ease;
    box-shadow: 0 0 10px var(--accent-color);
  }

  .nav-link:hover {
    color: var(--primary-color);
    background: rgba(49, 82, 89, 0.2);
    padding-left: 1.5rem;
    text-shadow: 0 0 20px rgba(49, 82, 89, 0.8);
  }

  .nav-link:hover::before {
    height: 60%;
  }

  /* Hero Section */
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #000000;
    color: var(--primary-color);
    text-align: center;
    position: relative;
  }

  .quote-container {
    max-width: 800px;
    padding: 2rem;
  }

  .quote {
    font-size: 2.5rem;
    font-weight: 500;
    line-height: 1.4;
    margin-bottom: 1rem;
    color: var(--primary-color);
    text-shadow: 0 0 30px rgba(49, 82, 89, 0.3);
  }

  .quote p {
    margin-bottom: 1.5rem;
    font-style: italic;
    font-weight: 400;
  }

  .quote .highlight {
    color: var(--accent-color);
    font-weight: 700;
    text-shadow: 
      0 0 30px rgba(49, 82, 89, 0.8),
      0 0 60px rgba(49, 82, 89, 0.5);
    position: relative;
  }

  .quote footer {
    font-size: 1.5rem;
    opacity: 0.8;
    font-style: normal;
    font-weight: 600;
    color: var(--secondary-color);
    text-shadow: 0 0 20px rgba(49, 82, 89, 0.4);
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    opacity: 0.8;
    animation: bounce 2s infinite;
    color: var(--secondary-color);
    text-shadow: 0 0 20px rgba(49, 82, 89, 0.6);
  }

  .scroll-indicator svg {
    filter: drop-shadow(0 0 10px rgba(49, 82, 89, 0.8));
  }

  @keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(-10px); }
  }

  /* About Section */
  .about-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 4rem 0;
    background-color: #000000;
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .profile-image {
    order: 2;
  }

  .profile-image img {
    width: 100%;
    max-width: 400px;
    height: 400px;
    object-fit: cover;
    border-radius: 50%;
    box-shadow: 
      0 0 60px rgba(49, 82, 89, 0.5), 
      0 0 120px rgba(49, 82, 89, 0.3),
      0 20px 80px rgba(1, 31, 38, 0.4);
    border: 2px solid rgba(49, 82, 89, 0.3);
    margin-left: auto;
    display: block;
    filter: drop-shadow(0 0 30px rgba(49, 82, 89, 0.6));
    transition: all 0.3s ease;
  }

  .profile-image img:hover {
    box-shadow: 
      0 0 80px rgba(49, 82, 89, 0.7), 
      0 0 150px rgba(49, 82, 89, 0.4);
    border-color: var(--accent-color);
  }

  .about-text {
    order: 1;
  }

  .about-text h2 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    color: var(--primary-color);
    font-weight: 700;
    text-shadow: 0 0 40px rgba(49, 82, 89, 0.4);
  }

  .about-text p {
    font-size: 1.25rem;
    color: var(--secondary-color);
    line-height: 1.8;
    font-weight: 400;
  }

  /* Gallery Section */
  .gallery-section {
    padding: 6rem 0;
    background-color: #000000;
  }

  .section-title {
    font-size: 3rem;
    text-align: center;
    margin-bottom: 4rem;
    color: var(--primary-color);
    font-weight: 700;
    text-shadow: 0 0 40px rgba(49, 82, 89, 0.4);
  }

  .video-grid {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .video-card {
    display: block;
    text-decoration: none;
    transition: transform 0.3s ease;
    max-width: 600px;
  }

  .video-card.align-right {
    margin-left: auto;
  }

  .video-card.align-left {
    margin-right: auto;
  }

  .video-card:hover {
    transform: scale(1.05);
  }

  .video-thumbnail {
    position: relative;
    border-radius: 40px;
    overflow: hidden;
    box-shadow: 
      0 10px 40px rgba(49, 82, 89, 0.4), 
      0 0 80px rgba(49, 82, 89, 0.2);
    border: 1px solid rgba(49, 82, 89, 0.2);
    transition: all 0.3s ease;
  }

  .video-card:hover .video-thumbnail {
    box-shadow: 
      0 15px 60px rgba(49, 82, 89, 0.6), 
      0 0 120px rgba(49, 82, 89, 0.4),
      inset 0 0 40px rgba(49, 82, 89, 0.1);
    border-color: var(--accent-color);
    transform: scale(1.02);
  }

  .video-thumbnail img {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 9/16;
    object-fit: cover;
  }

  .play-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(1, 31, 38, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .video-card:hover .play-overlay {
    opacity: 1;
  }

  .play-overlay svg {
    filter: drop-shadow(0 0 10px rgba(49, 82, 89, 0.8));
  }

  /* Contact Section */
  .contact-section {
    min-height: 60vh;
    display: flex;
    align-items: center;
    padding: 6rem 0;
    background: #000000;
    color: var(--primary-color);
  }

  .contact-links {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .contact-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    color: var(--primary-color);
    text-decoration: none;
    padding: 2rem;
    border-radius: 30px;
    background: rgba(1, 31, 38, 0.3);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(49, 82, 89, 0.3);
    transition: all 0.3s ease;
    min-width: 150px;
  }

  .contact-link:hover {
    background: rgba(49, 82, 89, 0.3);
    border-color: var(--accent-color);
    transform: translateY(-5px);
    box-shadow: 
      0 10px 30px rgba(49, 82, 89, 0.5),
      0 0 60px rgba(49, 82, 89, 0.3),
      inset 0 0 20px rgba(49, 82, 89, 0.1);
  }

  .contact-link span {
    font-size: 1.1rem;
    font-weight: 600;
  }

  .copyright {
    text-align: center;
    opacity: 0.7;
    font-size: 0.9rem;
    color: var(--secondary-color);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hamburger-btn {
      top: 1rem;
      left: 1rem;
      padding: 0.75rem;
    }

    .hamburger-line {
      width: 24px;
    }

    .main-nav {
      top: 4.5rem;
      left: 1rem;
      right: 1rem;
      min-width: auto;
    }

    .quote {
      font-size: 1.75rem;
    }

    .quote footer {
      font-size: 1.25rem;
    }

    .about-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .profile-image {
      order: 1;
    }

    .about-text {
      order: 2;
      text-align: center;
    }

    .profile-image img {
      margin: 0 auto;
      max-width: 300px;
      height: 300px;
    }

    .about-text h2 {
      font-size: 2rem;
    }

    .about-text p {
      font-size: 1.1rem;
    }

    .video-card.align-right,
    .video-card.align-left {
      margin: 0 auto;
    }

    .contact-links {
      gap: 1.5rem;
    }

    .section-title {
      font-size: 2rem;
    }
  }
</style>

<script>
  // Hamburger menu toggle
  const menuToggle = document.getElementById('menuToggle');
  const mainNav = document.getElementById('mainNav');

  menuToggle.addEventListener('click', () => {
    mainNav.classList.toggle('active');
  });

  // Close menu when clicking a link
  document.querySelectorAll('.nav-link').forEach(link => {
    link.addEventListener('click', () => {
      mainNav.classList.remove('active');
    });
  });

  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!menuToggle.contains(e.target) && !mainNav.contains(e.target)) {
      mainNav.classList.remove('active');
    }
  });

  // Smooth scroll enhancement
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });

  // Intersection Observer for scroll animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -100px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
      }
    });
  }, observerOptions);

  // Observe video cards for fade-in effect
  document.querySelectorAll('.video-card').forEach(card => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(30px)';
    card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
    observer.observe(card);
  });
</script>