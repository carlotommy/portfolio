---
// Photos Slider Section Component
const photos = [
  { id: 1, description: 'Scatto creativo 1', date: 'Gennaio 2026', path:'/photos/f1.jpg' },
  { id: 2, description: 'Scatto creativo 2', date: 'Gennaio 2026', path:'/photos/f2.jpg' },
  { id: 3, description: 'Scatto creativo 3', date: 'Dicembre 2025', path:'/photos/f3.jpg' },
  { id: 4, description: 'Scatto creativo 4', date: 'Dicembre 2025', path:'/photos/f4.jpg' },
  { id: 5, description: 'Scatto creativo 5', date: 'Novembre 2025', path:'/photos/f5.jpg' },
  { id: 6, description: 'Scatto creativo 6', date: 'Novembre 2025', path:'/photos/f6.jpg' },
  { id: 7, description: 'Scatto creativo 7', date: 'Ottobre 2025', path:'/photos/f7.jpg' },
];
---

<section id="photos" class="slider-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">LE MIE FOTO</h2>
    </div>

    <div class="photos-scroll-container">
      <div class="photos-scroll-track" id="photosScrollTrack">
        {photos.map(photo => (
          <div class="photo-item">
            <div class="photo-wrapper">
              <div class="photo-border"></div>
              <img
                src={photo.path}
                alt={`Foto ${photo.id}`}
                loading="eager"
                decoding="async"
                width="600"
                height="338"
              />
              <div class="photo-overlay">
                <div class="photo-info">
                  <p class="photo-description">{photo.description}</p>
                  <p class="photo-date">{photo.date}</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<!-- Lightbox Modal for Photos -->
<div id="photoLightbox" class="lightbox">
  <button class="lightbox-close" aria-label="Chiudi">×</button>
  <img id="lightboxImage" src="" alt="Foto ingrandita" />
</div>

<style>
  .slider-section {
    overflow: hidden;
  }

  .photos-scroll-container {
    position: relative;
    overflow-x: auto;
    overflow-y: hidden;
    border-radius: 20px;
    background: rgba(10, 22, 40, 0.3);
    padding: 0;
    border: 4px solid var(--primary-blue);
    box-shadow: 
      0 0 20px var(--primary-blue),
      0 0 40px rgba(199, 91, 57, 0.5),
      inset 0 0 20px rgba(199, 91, 57, 0.2);
    cursor: grab;
    scrollbar-width: none;
    /* Promuovi il container su un layer GPU dedicato */
    will-change: scroll-position;
    transform: translateZ(0);
  }

  .photos-scroll-container:active {
    cursor: grabbing;
  }

  .photos-scroll-container::-webkit-scrollbar {
    display: none;
  }

  .photos-scroll-track {
    display: flex;
    gap: 2rem;
    padding: 2rem 1rem;
    /* Evita reflow durante lo scroll animato */
    will-change: transform;
  }

  .photo-item {
    flex-shrink: 0;
    width: 600px;
    cursor: pointer;
  }

  .photo-wrapper {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    aspect-ratio: 16/9;
    max-width: 900px;
    margin: 0 auto;
    /* Layer GPU per ogni card, evita repaint durante hover */
    transform: translateZ(0);
    backface-visibility: hidden;
  }

  .photo-border {
    position: absolute;
    inset: 0;
    border: 3px solid transparent;
    border-radius: 20px;
    background: linear-gradient(135deg, var(--light-blue), var(--primary-blue)) border-box;
    -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    z-index: 2;
    pointer-events: none;
  }

  .photo-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    /* Decodifica asincrona già impostata nell'attributo;
       translateZ forza un layer separato evitando decode-on-paint */
    transform: translateZ(0);
    will-change: transform;
  }

  .photo-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(10, 22, 40, 0.95), transparent);
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: 2rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .photo-item:hover .photo-overlay {
    opacity: 1;
  }

  .photo-info {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .photo-description {
    font-family: 'Space Mono', monospace;
    font-size: 1.2rem;
    color: var(--text-white);
    letter-spacing: 2px;
    text-shadow: 0 0 10px var(--primary-blue);
    text-transform: uppercase;
  }

  .photo-date {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.9rem;
    color: var(--text-gray);
    letter-spacing: 1px;
  }

  /* Lightbox Styles */
  .lightbox {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.95);
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
    animation: fadeIn 0.3s ease;
  }

  .lightbox.active {
    display: flex;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .lightbox-close {
    position: absolute;
    top: 30px;
    right: 30px;
    background: var(--primary-blue);
    color: var(--text-white);
    border: none;
    font-size: 3rem;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
    z-index: 10000;
    box-shadow: 0 0 20px var(--primary-blue);
  }

  .lightbox-close:hover {
    background: var(--secondary-blue);
    transform: rotate(90deg);
  }

  #lightboxImage {
    max-width: 90%;
    max-height: 90%;
    object-fit: contain;
    border-radius: 10px;
    box-shadow: 0 0 50px rgba(44, 95, 158, 0.5);
  }

  @media (max-width: 768px) {
    .photo-item {
      width: 90vw;
    }
  }
</style>
