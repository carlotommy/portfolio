---
// Videos Slider Section Component
const videos = [
  { id: 1, label: 'VIDEO CREATIVO 1', date: 'Gennaio 2026', url: 'https://www.instagram.com/reel/DOa-1TnDNvi/' },
  { id: 2, label: 'VIDEO CREATIVO 2', date: 'Gennaio 2026', url: 'https://www.instagram.com/reel/EXAMPLE2/' },
  { id: 3, label: 'VIDEO CREATIVO 3', date: 'Dicembre 2025', url: 'https://www.instagram.com/reel/EXAMPLE3/' },
  { id: 4, label: 'VIDEO CREATIVO 4', date: 'Dicembre 2025', url: 'https://www.instagram.com/reel/EXAMPLE4/' },
  { id: 5, label: 'VIDEO CREATIVO 5', date: 'Novembre 2025', url: 'https://www.instagram.com/reel/EXAMPLE5/' },
  { id: 6, label: 'VIDEO CREATIVO 6', date: 'Novembre 2025', url: 'https://www.instagram.com/reel/EXAMPLE6/' },
  { id: 7, label: 'VIDEO CREATIVO 7', date: 'Ottobre 2025', url: 'https://www.instagram.com/reel/EXAMPLE7/' },
  { id: 8, label: 'VIDEO CREATIVO 8', date: 'Ottobre 2025', url: 'https://www.instagram.com/reel/EXAMPLE8/' },
];
---

<section id="videos" class="videos-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">I MIEI VIDEO</h2>
    </div>

    <div class="videos-scroll-container">
      <div class="videos-grid" id="videosGrid">
        {videos.map(video => (
          <a href={video.url} target="_blank" rel="noopener noreferrer" class="video-card">
            <div class="video-wrapper">
              <div class="video-border"></div>
              <img src={`/images/video${video.id}-thumb.jpg`} alt={`Video ${video.id}`} />
              <div class="video-overlay">
                <div class="play-button">
                  <svg viewBox="0 0 24 24" fill="none">
                    <path d="M8 5v14l11-7z" fill="currentColor"/>
                  </svg>
                </div>
                <div class="video-info">
                  <span class="video-label">{video.label}</span>
                  <span class="video-date">{video.date}</span>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .videos-section {
    padding: 8rem 0;
    position: relative;
  }

  .videos-scroll-container {
    height: 700px;
    overflow-x: hidden;
    overflow-y: auto;
    border-radius: 20px;
    background: rgba(10, 22, 40, 0.3);
    padding: 0;
    border: 4px solid var(--primary-blue);
    box-shadow: 
      0 0 20px var(--primary-blue),
      0 0 40px rgba(199, 91, 57, 0.5),
      inset 0 0 20px rgba(199, 91, 57, 0.2);
    max-width: 500px;
    margin: 0 auto;
    position: relative;
    cursor: grab;
    scrollbar-width: none;
    scrollbar-color: none;
  }

  .videos-scroll-container:active {
    cursor: grabbing;
  }

  .videos-scroll-container::-webkit-scrollbar {
    width: 8px;
  }

  .videos-scroll-container::-webkit-scrollbar-track {
    background: rgba(10, 22, 40, 0.3);
    border-radius: 10px;
  }

  .videos-scroll-container::-webkit-scrollbar-thumb {
    background: var(--primary-blue);
    border-radius: 10px;
  }

  .videos-scroll-container::-webkit-scrollbar-thumb:hover {
    background: var(--secondary-blue);
  }

  .videos-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1rem;
  }

  .video-card {
    text-decoration: none;
    display: block;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .video-card:hover {
    transform: scale(1.02);
  }

  .video-wrapper {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    aspect-ratio: 9/16;
  }

  .video-border {
    position: absolute;
    inset: 0;
    border: 3px solid transparent;
    border-radius: 20px;
    background: linear-gradient(135deg, var(--light-blue), var(--primary-blue)) border-box;
    -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    z-index: 2;
    pointer-events: none;
  }

  .video-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .video-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(10, 22, 40, 0.9), transparent);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .video-card:hover .video-overlay {
    opacity: 1;
  }

  .play-button {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: var(--primary-blue);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    box-shadow: 
      0 0 30px var(--primary-blue),
      0 0 60px rgba(44, 95, 158, 0.5);
    animation: playPulse 2s ease-in-out infinite;
  }

  @keyframes playPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  .play-button svg {
    width: 32px;
    height: 32px;
    color: white;
  }

  .video-info {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .video-label {
    font-family: 'Space Mono', monospace;
    font-size: 0.9rem;
    color: var(--text-white);
    letter-spacing: 3px;
    text-shadow: 0 0 10px var(--primary-blue);
    text-transform: uppercase;
  }

  .video-date {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.8rem;
    color: var(--text-gray);
    letter-spacing: 1px;
  }

  @media (max-width: 768px) {
    .videos-scroll-container {
      height: 600px;
    }
  }
</style>
